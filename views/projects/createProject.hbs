<main>
<div class="container">
    <h2>Create New Project</h2>

    <a href="/projects">Return to Projects</a><br><br>

    <div class="container">
        <form method="POST" action="/projects">

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- Project Information --}}
                    <p>
                        <label>Project Details</label>
                        <textarea class="form-control" name="" id = "myTextArea" rows = "8"cols = "40">Enter project information</textarea>
                    </p>
                </div>
                <div class="form-group col-md-6">
                    {{!-- occupation --}}
                    <input class="form-control" type="text" name="occupation" value="{{ user.occupation }}">
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- Project Name --}}
                    <input class="form-control" type="text" name="name" value="{{ project.name }}">
                </div>
                <div class="form-group col-md-6">
                    {{!-- Creation Date --}}
                    <input class="form-control" type="datetime-local" name="dateCreated" value="{{ project.dateCreated }}">
                </div>
            </div>

            <input class="form-control" type="submit" value="Update Profile">
        </form>
    </div>
</div>
</main>
