<div class="container">
    <h2>Edit Profile</h2>

    <a href="/">Return to User Index</a><br><br><br>

    <div class="container">
        <form method="POST" action="{{ user.id }}?_method=PUT">
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- firstName --}}
                    <input class="form-control" type="text" name="firstName" value="{{ user.firstName }}">
                </div>
                <div class="form-group col-md-6">
                    {{!-- lastName --}}
                    <input class="form-control" type="text" name="lastName" value="{{ user.lastName }}">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- email --}}
                    <input class="form-control" type="text" name="email" value="{{ user.email }}">
                </div>
                <div class="form-group col-md-6">
                    {{!-- occupation --}}
                    <input class="form-control" type="text" name="occupation" value="{{ user.occupation }}">
                </div>
            </div>
        <div class="form-group">
            {{!-- specializations --}}
            <input class="form-control" type="text" name="specializations" value="{{ user.specializations }}"><br>
            {{!-- skills --}}
            <input class="form-control" type="text" name="skills" value="{{ user.skills }}"><br>
             <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- birthday --}}
                    <input class="form-control" type="date" name="birthDate" value="{{ user.birthDate }}">
                </div>
                <div class="form-group col-md-6">
                    {{!-- profile image --}}
                    <input class="form-control" type="text" name="img" value="{{ user.img }}">
                </div>
            </div>   
        </div>
        <input class="form-control" type="submit" value="Update Profile">
    </form>

<form method="POST" action="{{ user.id }}?_method=DELETE">
  <input class="form-control " type="submit" value="Delete" />
</form>