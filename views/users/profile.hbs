<main>
    <div class="container">
        <img class="profile-pic" src="{{ user.img }}" alt="user pic">

        <h3>{{ user.firstName }} {{ user.lastName }}</h3>
        <h4>{{ user.occupation }}</h4>
        <h5><a href="{{ user.email }}">contact me</a></h5>

        <p><strong>Specialties:</strong></p>
        <p>
        {{#each user.specializations }}
            <span>{{ this }},</span>
        {{/each }}
        </p>
        
        <p><strong>Skills:</strong></p>        
        <ul>
        {{#each user.skills }}
            <li>{{ this }}</li>
        {{/each }}    
        </ul>
        
        <a href="/{{ user.id }}/edit">Edit Profile</a>
    </div>

    <form method="POST" action="{{ user.id }}?_method=DELETE">
        <input class="form-control " type="submit" value="Delete" />
    </form>
</main>